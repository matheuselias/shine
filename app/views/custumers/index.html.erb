<article ng-app="customers" ng-controller="CustomerSearchController">
  <header>
    <h1 class="h2">Custumer Search</h1>
  </header>
  <selection class="search-form">
    <form>
      <div class="input-group input-group-lg">
        <label for="search.keywords" class="sr-only">Keywords</label>
        <input type="text" name="keywords" class="form-control input-lg"
          placeholder="First Name, Last Name, or Email Address" ng-change="search(keywords)" ng-model="keywords">
        <span class="input-group-btn">
          <button class="btn btn-primary btn-lg" ng-click="search(keywords)">Find Customers</button>
        </span>
      </div>
    </form>
    <h1 class="searchFor" ng-if="searchedFor">
      <small>Searched for:</small> {{searchedFor}}
    </h1>
  </selection>
  <selection class="search-results" ng-if="customers.length > 0">
    <header>
      <h1 class="h3">Results</h1>
    </header>
    <nav>
      <ul class="pager">
        <li class="previous">
          <a href="" ng-click="previousPage()">&larr; Previous</a>
        </li>
        <li class="next">
          <a href="" ng-click="nextPage()">Next &rarr;</a>
        </li>
      </ul>
    </nav>
    <ol class="list-group">
      <li class="list-group-item clearfix" ng-repeat="customer in customers">
        <h3 class="pill-right">
          <small class="text-uppercase">Joined</small>
          {{customer.created_at | date}}
        </h3>
        <h2 class="h3">
          {{customer.first_name}} {{customer.last_name}}
          <small>{{customer.username}}</small>
        </h2>
        <h4>{{customer.email}}</h4>
      </li>
    </ol>
    <nav>
      <ul class="pager">
        <li class="previous">
          <a href="" ng-click="previousPage()">&larr; Previous</a>
        </li>
        <li class="next">
          <a href="" ng-click="nextPage()">Next &rarr;</a>
        </li>
      </ul>
    </nav>
  </selection>
</article>
