<header>
  <h1 class="h2">Custumer Search</h1>
</header>
<selection class="search-form">
  <%= form_for :custumers, method: :get do |f| %>
    <div class="input-group input-group-lg">
      <%= label_tag :keywords, nil, class: "sr-only" %>
      <%= text_field_tag :keywords, nil,
            placeholder: "First Name, Last Name, or Email Address",
            class: "form-control input-lg" %>
      <span class="input-group-btn">
        <%= submit_tag "Find Custumers", class: "btn btn-primary btn-lg" %>
      </span>
    </div>
  <% end %>
</selection>
<selection class="search-results">
  <header>
    <h1 class="h3">Results</h1>
  </header>
  <%= render partial: "pager", locals: {keywords: @keywords, page: @page} %>
  <ol class="list-group">
    <% @custumers.each do |custumer| %>
      <li class="list-group-item clearfix">
        <h3 class="pull-right">
          <small class="text-uppercase">Joined</small>
          <%= l custumer.created_at.to_date %>
        </h3>
        <h2 class="h3">
          <%= custumer.first_name %> <%= custumer.last_name %>
          <small><%= custumer.username %></small>
        </h2>
        <h4><%= custumer.email %></h4>
      </li>
    <% end %>
  </ol>
  <%= render partial: "pager", locals: {keywords: @keywords, page: @page} %>
</selection>
